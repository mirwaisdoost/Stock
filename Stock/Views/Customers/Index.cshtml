@model IEnumerable<Stock.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header p-2">
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Create New</a>
    </div>
    <div class="card-body">

        <table class="table table-bordered" id="table" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary btn-sm p-0 pl-1 pr-1"><i class="fas fa-edit"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary btn-sm p-0 pl-1 pr-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm p-0 pl-1 pr-1"  onclick="return confirm('Are you sure you want to delete the selected record?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer">
        Total:
    </div>
</div>

<script>
    $(document).ready(function () {
                var table = $('#table').DataTable({
                    dom: 'Bfrtip',
                    lengthChange: false,
                    buttons: ['copy', 'csv', 'excel', 'pdf', 'colvis', 'print']
                });

                table.buttons().container()
                    .appendTo('#example_wrapper .col-md-6:eq(0)');
            });
</script>